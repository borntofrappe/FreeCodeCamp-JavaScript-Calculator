@import url('https://fonts.googleapis.com/css?family=Roboto+Mono:300');

// define colors and fonts used in the stylesheet (use a monospace font which gives all characters the same width)
color-background = #252525
color-button = #EBE9E7
font-button = 'Roboto Mono', monospace

*
    box-sizing border-box
    margin 0
    padding 0
  
body
    min-height 100vh
    width 100%
    font-family font-button
    color color-background
    background-color color-background
    
.container
    // display the calculator in the center of the screen with flex properties
    display flex
    min-height 100vh 
    justify-content center 
    align-items center

.calculator
    // for the calculator, create a grid with four columns (62px for the buttons) and six rows (one of 82px for the display, five of 62px for the buttons) 
    display grid 
    grid-template-columns repeat(4, 62px)
    grid-template-rows 82px repeat(5, 62px)
    grid-gap 12px
    padding 0.5rem

    .display
        // for the display, stretch the container to cover all the columns and one row
        grid-column 1/5
        grid-row 1/2
        background-color color-button
        padding 0.5rem
        // display the text at the end of the container with flex properties
        display flex 
        justify-content flex-end
        align-items center

        p 
            font-size 2rem

    button 
        // for the buttons 100% of width and height assures the buttons are squares of 62px
        width 100%
        height 100%
        border-radius 4px 
        outline none 
        font-family inherit
        color inherit
        font-size 1.5rem
        font-weight bold
        background-color color-button
        border 0 solid darken(color-button, 20%)
        border-width 3px 4px 5px
        text-transform uppercase

        &:active
            // when each button is pressed, darken the background-color, but mostly the border-color
            background-color darken(color-button, 5%)
            border-color darken(color-button, 50%)

        &[data-value="no-function"]:active
            // for the button without a value (and a function currently), remove styling when pressed
            border-color darken(color-button, 20%)
            background-color color-button

        &[data-value="+"]
            // for the plus and equal operators, which are the most prominent buttons of the simplified calculator, make them span one column, but two rows 
            grid-row 3/5
            grid-column 4/5            
        &[data-value="="]
            grid-row 5/7
            grid-column 4/5